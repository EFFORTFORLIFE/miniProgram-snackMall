.container{
  box-sizing: border-box;
  display:flex;
  height: 100vh;
}
.leftNav{
  width:150rpx;
  border-right:1px #ccc solid;
  text-align: center;
  box-sizing: border-box;
  font-size:36rpx;
  color:#ccc;
}
.scrollContainer{
  width:600rpx;
  box-sizing: border-box;
  height: 100%;
  overflow: hidden;
  display:block;
}
.scrollView{
  height: 100%;
}
.rightImg{
  height: 100%;
  padding-top:20rpx;
}
.bgImg{
  width:560rpx;
  margin:0 auto;
}
.productTitle{
  text-align:center;
  font-size:40rpx;
  color:#ccc;
  position:relative;
}
.productTitle text::before{
  content:'';
  position:absolute;
  left:180rpx;
  top:50%;
  width:60rpx;
  height:2rpx;
  background:#ccc;
}
.productTitle text::after{
  content:'';
  position:absolute;
  right:180rpx;
  top:50%;
  width:60rpx;
  height:2rpx;
  background:#ccc;
}
.productItem view{
  width:150rpx;
  height: 150rpx;
}
.productList{
  display:flex;
  justify-content: space-around;
  text-align: center;
  color:#ccc;
  margin-top:20rpx;
}
.curClass{
  color:#333;
}