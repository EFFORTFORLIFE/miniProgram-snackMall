.cartItem{
  display:flex;
  align-items: center;
  padding:20rpx;
  border-bottom:1px solid #f1f1f1;
}
.itemImg{
  width:150rpx;
  height: 150rpx;
  margin:0 20rpx;
}
.itemImg image{
  width:100%;
  height: 100%;
}
.itemDetail{
  display:flex;
  flex-direction: column;
  justify-content: space-between;
  height: 150rpx;
  box-sizing: border-box;
  width:450rpx;
}
.about{
  display:flex;
  justify-content: space-between;
  width:450rpx;
}
.about{
  display:flex;
  justify-content: space-between;
  width:100%;
}
.count{
width:100%;
display:flex;
}
.count text{
  flex:1;
}
.count text:nth-last-child(1){
  flex:3;
  text-align: end;
}
.counter{
  background:#66dea0;
  position:absolute;
  bottom:0rpx;
  width:100%;
  display:flex;
  justify-content: space-between;
  color:#fff;
  height: 80rpx;
  line-height:80rpx;
  padding:0 20rpx;
  box-sizing: border-box;
}