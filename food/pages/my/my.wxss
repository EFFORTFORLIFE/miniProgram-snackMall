.person{
  display:flex;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
  background:#66dea0;
  padding:0 20rpx 30rpx;
  color:#fff;
}
.theHead{
  width:100rpx;
  height:100rpx;
}
.theHead image{
  width:100%;
  height: 100%;
  border-radius: 50rpx;
}
.userInfo{
  display:flex;
  align-items: center;
}
.userInfo text{
  margin-left:20rpx;
}
.order{
  color:#666;
  margin-top:20rpx;
}
.order text{
  height: 60rpx;
  line-height: 60rpx;
  display:block;
  padding-left:20rpx;
}
.order text:nth-child(1){
  text-align: center;
  border-bottom:1px #f1f1f1 solid;
  padding-left:0rpx;
}